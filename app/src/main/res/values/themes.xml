<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryVariant">@color/primary_yellow_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_yellow_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MConnect.Button</item>
    </style>

    <style name="Theme.MConnect" parent="Base.Theme.MConnect" />

    <!-- Custom button style -->
    <style name="Widget.MConnect.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>